<Window x:Class="Wpf_Comandos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel >
        <TextBox x:Name="tbx1" FontSize="15" Height="30" Margin="57,47,61,0"/>
        <TextBox x:Name="tbx2" FontSize="15" Height="30" Margin="57,47,61,0"/>
        <TextBox x:Name="tbx3" FontSize="15" Height="30" Margin="57,47,61,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10"
                    FocusManager.IsFocusScope="True" >
            <Button Command="Cut" FontSize="18" Content="Cortar" Margin="5"/>
            <Button Command="Copy" FontSize="18" Content="Copiar" Margin="5"/>
            <Button Command="Paste" FontSize="18" Content="Pegar" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
